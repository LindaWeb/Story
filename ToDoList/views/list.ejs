        <h1 style="color: maroon">It's <%= listTitle %>!</h1>
    <% } else { %>
        <h1 style="color: navy">It's <%= listTitle %>!</h1>
    <% } %>
</div>

<div class="box">
    <% for(var i=0; i<newlistItems.length; i++) {%> 
        <div class="item">
            <input type="checkbox">
            <p><%= newlistItems[i]%></p>
        </div>
     <% } %>
     <form class="item" action="/" method="post">
        <!-- <label for="toDoItem">New Item</label> -->
        <input type="text" name="toDoItem" id="toDoItemInput" placeholder="New To Do Item">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
    
    </div>


